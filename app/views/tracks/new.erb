<h1>Post a Track</h1>
<hr/>

<% if @track.errors.any? %>
  <div>
    <strong>Some issues with your input, please fix them:</strong>
    <ul>
      <% @track.errors.full_tracks.each do |track| %>
        <li><%= track %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<form method="post" action="/tracks">
  <div>
    <label>Song title:</label>
    <input type="text" name="song_title" value="<%= @track.song_title %>">
  </div>
  <div>
    <label>Author:</label>
    <input type="text" name="author" value="<%= @track.author %>">
  </div>
  <div>
    <label>URL:</label>
    <input type="text" name="url" value="<%= @track.url %>">
  </div>
  <div>
    <input type="submit" value="Submit">
  </div>
</form>
